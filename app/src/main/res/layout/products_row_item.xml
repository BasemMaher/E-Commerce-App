<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_constrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="150dp">
    android:elevation="8dp"

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="257dp"
        android:layout_height="433dp"
        android:backgroundTint="#fffafa"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/frame1"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="95dp"
            android:layout_height="34dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="20999"
            android:textColor="#42995C"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/product_qty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/product_qty"
            app:layout_constraintTop_toTopOf="@+id/product_qty"
            app:layout_constraintVertical_bias="0.521" />

        <ImageView
            android:id="@+id/like_image"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:onClick="Like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="173dp"
            android:layout_height="193dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.255"
            app:srcCompat="@drawable/phone2" />

        <TextView
            android:id="@+id/product_qty"
            android:layout_width="78dp"
            android:layout_height="37dp"
            android:layout_marginBottom="44dp"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="256\n GB"
            android:textColor="#42995C"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_marginBottom="92dp"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="Samsung Galaxy S21 Altra 5G Ram 12 GB "
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/Name"
            app:layout_constraintStart_toStartOf="@+id/Name" />

        <TextView
            android:id="@+id/product_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="  1  "
            android:textColor="@color/design_default_color_error"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/product_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.585"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="  Id: "
            android:textColor="@color/design_default_color_error"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/product_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/product_id"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="143dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="Samsung"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/product_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="$"
            android:textColor="@color/teal_700"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/product_price"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="@+id/product_price"
            app:layout_constraintTop_toBottomOf="@+id/product_price"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>